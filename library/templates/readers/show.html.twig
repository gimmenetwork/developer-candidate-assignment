{% extends 'layout.html.twig' %}

{% block title %}Readers{% endblock %}

{% block content %}

    <!-- Content Header (Page header) -->
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1>Readers</h1>
          </div>
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="#">Readers</a></li>
              <li class="breadcrumb-item active">Reader</li>
            </ol>
          </div>
        </div>
      </div><!-- /.container-fluid -->
    </section>


    <!-- Main content -->
    <section class="content">
      <div class="container-fluid">
        <div class="row">
          <div class="col-8">
            <div class="card card-primary">
              <div class="card-header">
                <h3 class="card-title">Book</h3>
              </div>
              <div class="card-body">
                <table class="table">
                    <tbody>
                        <tr>
                            <th>Id</th>
                            <td>{{ reader.id }}</td>
                            <td></td>
                        </tr>
                        <tr>
                            <th>Name</th>
                            <td>{{ reader.name }}</td>
                            <td></td>
                        </tr>
                        {% for book in reader.books %}
                          <tr>
                              <th>Book</th>
                              <td>
                                <a href="{{ path('book_show', {'id': book.id}) }}">{{ book.name }}</a>
                              </td>
                              <td>
                              <a 
                                href="{{ path('book_release', {'id': book.id}) }}" 
                                class="btn btn-sm btn-success">
                                Release
                              </a>
                              </td>
                          </tr>
                        {% endfor %}
                    </tbody>
                </table>
              </div>
              <div class="card-footer">
                
                <a href="{{ path('readers_index') }}" class="btn btn-secondary">back to list</a>

                <a href="{{ path('readers_edit', {'id': reader.id}) }}" class="btn btn-warning">edit</a>

                {{ include('readers/_delete_form.html.twig') }}

              </div>
              
            </div>
            <!-- /.card -->
          </div>
          
        </div>
        <!-- /.row -->
      </div>
      <!-- /.container-fluid -->
    </section>

{% endblock %}
