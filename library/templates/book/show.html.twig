{% extends 'layout.html.twig' %}

{% block title %}Book{% endblock %}

{% block content %}
    
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1>Book</h1>
          </div>
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="#">Books</a></li>
              <li class="breadcrumb-item active">Book</li>
            </ol>
          </div>
        </div>
      </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
      <div class="container-fluid">
        <div class="row">
          <div class="col-8">
            <div class="card card-primary">
              <div class="card-header">
                <h3 class="card-title">Book</h3>
              </div>
              <div class="card-body">
                <table class="table">
                    <tbody>
                        <tr>
                            <th>Id</th>
                            <td>{{ book.id }}</td>
                            <td></td>
                        </tr>
                        <tr>
                            <th>Name</th>
                            <td>{{ book.name }}</td>
                            <td></td>
                        </tr>
                        <tr>
                            <th>Author</th>
                            <td>{{ book.author }}</td>
                            <td></td>
                        </tr>
                        <tr>
                            <th>Genre</th>
                            <td>{{ book.genre }}</td>
                            <td></td>
                        </tr>
                        {% if book.available %}
                        <tr>
                            <th>Reader</th>
                            <td>
                              <a href="{{ path('readers_show', {'id': book.reader.id}) }}" >
                                {{ book.reader.name }}
                              </a>
                            </td>
                            <td>
                              <a href="{{ path('book_release', {'id': book.id}) }}" class="btn btn-sm btn-success pull-right">Release</a>
                            </td>
                        </tr>
                        {% else %}
                        <tr>
                            <th>Available</th>
                            <td>
                              <a href="{{ path('book_lease', {'id': book.id}) }}" class="btn btn-primary">Lease to reader</a>
                            </td>
                        </tr>
                        {% endif %}
                    </tbody>
                </table>
              </div>
              <div class="card-footer">
                
                <a href="{{ path('book_index') }}" class="btn btn-secondary">back to list</a>

                <a href="{{ path('book_edit', {'id': book.id}) }}" class="btn btn-warning">edit</a>

                {{ include('book/_delete_form.html.twig') }}

              </div>
              
            </div>
            <!-- /.card -->
          </div>
          <!-- /.col -->
        </div>
        <!-- /.row -->
      </div>
      <!-- /.container-fluid -->
    </section>

{% endblock %}
